<script>
    var argeeButton = document.getElementById('agree');
    var disargeeButton = document.getElementById('disagree');
    argeeButton.addEventListener('click', function(e){
        let p = document.createElement('p');
        p.innerHTML = '好的，媳妇！';
        p.style.cssText = 'position: absolute; top: 200px; left: 600px; font-size: 40px'
        document.body.appendChild(p);
        document.body.removeChild(argeeButton);
        document.body.removeChild(disargeeButton);
    })
    disargeeButton.addEventListener('click', function(e){
        var left = ['450px', '510px', '600px', '680px', '750px'];
        var top = ['100px', '200px', '300px', '400px', '500px'];
　　　　 var leftIndex = Math.floor((Math.random()*left.length));
　　　　 var topIndex = Math.floor((Math.random()*top.length));
        disargeeButton.style.position = 'absolute';
        disargeeButton.style.top = top[topIndex];
        disargeeButton.style.left = left[leftIndex];
    })
</script>
